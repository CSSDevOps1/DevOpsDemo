@model SampleBoilerTemp.Web.Models.Account.RegisterViewModel
@section Styles
{
    <link href="~/Views/Account/Login.css" rel="stylesheet" />
}
@section Scripts{
    <script type="text/javascript" src="~/Views/Account/Register.js"></script>
}
<style type="text/css">
    .well.bs-component {
        background: rgba(0,0,0,0.3);
        border: none;
        text-align: center;
    }

    legend {
        color: #fff;
        text-transform: uppercase;
        text-align: center;
        font-weight: bold;
        font-size: 23px;
    }

   

      #LoginArea .form-group {
        margin-bottom: 5px;
    }

     
         #LoginArea .form-group input {
            padding: 5px 13px;
            height: auto;
            font-size: 12px;
            border-radius: 3px;
            margin: 0 0 5px 0;
        }

    span.text-muted {
        color: #f1f1f1;
        font-size: 11px;
        padding: 0 0 0 0px;
        text-align: left !important;
        display: inherit;
        margin: 7px 0 3px 0;
    }

    #LoginArea .checkbox input {
        margin: 3px 0 2px 0 !important;
    }

    .checkbox {
        color: #fff;
        font-size: 12px;
        padding-left: 1px;
        text-align: left;
    }

    #LoginForm .btn {
        padding: 5px 12px;
        font-size: 12px;
        border-radius: 21px;
    }
     #LoginArea .btn {
        padding: 5px 12px;
        font-size: 12px;
        border-radius: 21px;
    }
     #LoginArea span.text-danger {
    font-size: 11px;
    text-align: left;
    color: #fff;
}
</style>
<body style="background: url('../../App/Main/images/loginimg.jpg') no-repeat center center; background-size:cover;">
    <div class="container">
        <div id="LoginArea" class="row">
            <div class="col-lg-12">
                <div class="well bs-component">
                    <form class="form-horizontal register-form" action="@(Url.Action("Register","Account"))" method="POST">
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <legend>@L("Register")</legend>

                            @if (@ViewBag.ErrorMessage != null)
                            {
                                <div class="alert alert-danger">
                                    <i class="fa fa-warning"></i> @ViewBag.ErrorMessage
                                </div>
                            }

                            @if (ViewBag.IsMultiTenancyEnabled)
                            {
                                <div class="form-group">
                                    <div class="col-lg-12">
                                        <input type="text" class="form-control" name="TenancyName" placeholder="@L("TenancyName")" value="@Model.TenancyName" required maxlength="@SampleBoilerTemp.MultiTenancy.Tenant.MaxTenancyNameLength">
                                    </div>
                                </div>
                            }

                            <input type="hidden" name="IsExternalLogin" value="@Model.IsExternalLogin.ToString()" />

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input type="text" class="form-control" name="Name" value="@Model.Name" placeholder="@L("Name")" required maxlength="@SampleBoilerTemp.Users.User.MaxNameLength">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input type="text" class="form-control" name="Surname" value="@Model.Surname" placeholder="@L("Surname")" required maxlength="@SampleBoilerTemp.Users.User.MaxSurnameLength">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input type="email" class="form-control" name="EmailAddress" value="@Model.EmailAddress" placeholder="@L("EmailAddress")" required maxlength="@SampleBoilerTemp.Users.User.MaxEmailAddressLength">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input type="text" class="form-control" name="UserName" value="@Model.UserName" placeholder="@L("UserName")" required maxlength="@SampleBoilerTemp.Users.User.MaxUserNameLength">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <input type="password" class="form-control" name="Password" placeholder="@L("Password")" required maxlength="@SampleBoilerTemp.Users.User.MaxPlainPasswordLength">
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-12">
                                    <button type="submit" id="RegisterButton" class="btn btn-primary"><i class="fa fa-sign-in"></i> @L("Register")</button>
                                </div>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
